<?xml version="1.0" encoding="UTF-8"?>
<tns:fragment id="FC_flexibusBooking" xmlns:tns="http://das.fbk.eu/Fragment"
	xmlns:tns1="http://das.fbk.eu/Annotation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://das.fbk.eu/Fragment Fragment.xsd ">

	<tns:state isInitial="true" name="ST0" />
	<tns:state name="ST1" />
	<tns:state name="ST2" />
	<tns:state name="ST3" />
	<tns:state name="ST4" />
	<tns:state name="ST5" />
	<tns:state name="ST6" />

	<tns:action name="FC_FlexibusBookingRequest" actionType="input">
		<tns:precondition>
			<tns1:point>
				<tns1:domainProperty dp_name="FlexibusTrip">
					<tns1:state>USER_LOGGED_IN</tns1:state>
				</tns1:domainProperty>
			</tns1:point>
		</tns:precondition>
	</tns:action>

	<tns:action name="FC_TripDetails" actionType="output">
	</tns:action>

	<tns:action name="FC_ConfirmAndPay" actionType="abstract">
		<tns:goal>
			<tns1:point>
				<tns1:domainProperty dp_name="HandlePayment">
					<tns1:state>
						PAYMENT_EXECUTED
					</tns1:state>
				</tns1:domainProperty>
			</tns1:point>
		</tns:goal>
	</tns:action>

	<tns:action name="FC_PaymentReceipt" actionType="input">
	</tns:action>

	<tns:action name="FC_BookingResult" actionType="output">
	</tns:action>

	<tns:action name="FC_SetPassengerDetails" actionType="abstract">
		<tns:goal>
			<tns1:point>
				<tns1:domainProperty dp_name="RoutePassengerStatus">
					<tns1:state>
						PASSENGER_DETAILS_DEFINED
					</tns1:state>
				</tns1:domainProperty>
			</tns1:point>
		</tns:goal>
		<tns:effect>
			<tns1:event dpName="FlexibusTrip" eventName="tripBooking"></tns1:event>
		</tns:effect>
	</tns:action>


	<tns:transition>
		<tns:initialState>ST0</tns:initialState>
		<tns:finalState>ST1</tns:finalState>
		<tns:action name="FC_FlexibusBookingRequest" actionType="input" />
	</tns:transition>

	<tns:transition>
		<tns:initialState>ST1</tns:initialState>
		<tns:finalState>ST2</tns:finalState>
		<tns:action name="FC_TripDetails" actionType="output" />
	</tns:transition>

	<tns:transition>
		<tns:initialState>ST2</tns:initialState>
		<tns:finalState>ST3</tns:finalState>
		<tns:action name="FC_ConfirmAndPay" actionType="abstract" />
	</tns:transition>

	<tns:transition>
		<tns:initialState>ST3</tns:initialState>
		<tns:finalState>ST4</tns:finalState>
		<tns:action name="FC_PaymentReceipt" actionType="input" />
	</tns:transition>

	<tns:transition>
		<tns:initialState>ST4</tns:initialState>
		<tns:finalState>ST5</tns:finalState>
		<tns:action name="FC_BookingResult" actionType="output" />
	</tns:transition>

	<tns:transition>
		<tns:initialState>ST5</tns:initialState>
		<tns:finalState>ST6</tns:finalState>
		<tns:action name="FC_SetPassengerDetails" actionType="abstract" />
	</tns:transition>

</tns:fragment>
